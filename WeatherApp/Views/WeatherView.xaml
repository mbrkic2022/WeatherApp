<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.WeatherView"
             xmlns:converters="clr-namespace:WeatherApp.Converters"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             Title="WeatherView">
    <ContentPage.Resources>
        <converters:CodeToLottieConverter x:Key="CodeToLottie"/>
        <converters:CodeToWeatherConverter x:Key="CodeToWeather"/>
    </ContentPage.Resources>
    <Grid Margin="15" RowDefinitions=".1*, .1*, .5*, .1*, .2*"
          BackgroundColor="#060723">
        <Grid>
            <Frame/>
            <SearchBar x:Name="searchBar"
                       Placeholder="Search"
                       VerticalOptions="Center"
                       SearchCommand="{Binding SearchCommand}"
                       SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"/>
        </Grid>
        <VerticalStackLayout Grid.Row="1"
                             Style="{StaticResource MainStackLayout}">
            <Label Text="New York" Style="{StaticResource Title}"/>
            <Label Text="April 4, 2025"/>
        </VerticalStackLayout>
        <skia:SKLottieView Grid.Row="2"
                           RepeatCount="-1"
                           Source="storm.json"/>
        <Grid Grid.Row="3"
              ColumnDefinitions="*, *, *">
            <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                <Label Style="{StaticResource WeatherValue}" Text="24°"/>
                <Label Style="{StaticResource WeatherValue}" Text="Temp"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" Spacing="10">
                <Label Style="{StaticResource WeatherValue}" Text="Wind"/>
                <Label Style="{StaticResource WeatherValue}" Text="70 km/h"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center" Spacing="10">
                <Label Style="{StaticResource WeatherValue}" Text="Weather"/>
                <Label Style="{StaticResource WeatherValue}" Text="Sunny"/>
            </VerticalStackLayout>
        </Grid>
        <CollectionView Grid.Row="4">
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>1</x:String>
                    <x:String>1</x:String>
                    <x:String>1</x:String>
                    <x:String>1</x:String>
                    <x:String>1</x:String>
                </x:Array>
            </CollectionView.ItemsSource>
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{StaticResource Card}">
                        <VerticalStackLayout BackgroundColor="White">
                            <skia:SKLottieView IsAnimationEnabled="false"
                                               HeightRequest="50"
                                               WidthRequest="50"
                                               Source="mist.json"
                                               />
                            <Label Text="05-04.2025" TextColor="YellowGreen"/>
                            <Label Text="30°"/>
                            <Label Text="Rainy"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>